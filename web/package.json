{
    "name": "ai-painting-web",
    "version": "0.0.0",
    "main": "electron-main.js", 
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",  
        "build": "vite build",  
        "preview": "vite preview", 
        "electron:dev": "electron .",  
        "electron:build": "vite build && electron-builder"  
    },
    "devDependencies": {
        "vite": "^7.1.11",
        "electron": "^latest", 
        "electron-builder": "^latest"  
    },
    "build": {  
        "appId": "com.example.aipainting",
        "productName": "AI Painting App",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "electron-main.js",
            "preload.js"
        ],
        "win": {
            "target": "nsis"
        },
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}